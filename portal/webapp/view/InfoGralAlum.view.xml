<mvc:View controllerName="com.udep29.InfoAlum.portal.controller.InfoGralAlum"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<App id="app">
		<pages>
			<Page id="page" title="{i18n>title}">
				<content>
					<Panel>
						<headerToolbar>
							<OverflowToolbar>
								<Title text="{i18n>InfoAlumTitle}" />
							</OverflowToolbar>
						</headerToolbar>
						<l:Grid defaultSpan="L12 M7 S12" width="auto">
							<l:content>
								<f:SimpleForm id="SimpleFormChange354" minWidth="1024" maxContainerCols="2" layout="ResponsiveLayout" editable="true" visible="true">
									<Image src="/images/icono.png" width="5%" />
									<f:content>
										<Label xmlns="sap.m" text="{i18n>numIdentAlumHead}" textAlign="Center" design="Bold" />
										<Input value="{Estudiantes>/NumeroIdent}" width="35%" />
										<Label xmlns="sap.m" text="{i18n>nomAlumHeader}" textAlign="Center" design="Bold" />
										<Input value="Edson" width="35%" />
										<Label xmlns="sap.m" text="{i18n>apellAlumHeader}" textAlign="Center" design="Bold" />
										<Input value="Bravo Zapata" width="35%" />
										<Label xmlns="sap.m" text="{i18n>nacAlumHeader}" textAlign="Center" design="Bold" />
										<Input value="Mexicana" width="35%" />
										<Label xmlns="sap.m" text="{i18n>fecNacAlumheader}" textAlign="Center" design="Bold" />
										<Input value="01/03/1993" width="35%" />
									</f:content>
								</f:SimpleForm>
							</l:content>
						</l:Grid>
					</Panel>
					<Panel>
						<Label xmlns="sap.m" text="{i18n>miCarr}" textAlign="Center" class="sapUiSmallMarginEnd" />
						<Label xmlns="sap.m" text="{Carrera>Carrera}" textAlign="Center" class="sapUiSmallMarginEnd" design="Bold" />
					</Panel>
					<Panel>
						<Table items="{/Semestre}">
							<items>
								<ColumnListItem type="Active" id="item0">
									<cells>
										<Text text="{SemestreInicio}" id="text0" textAlign="Center" />
										<Text text="{posicionCarrera}" id="text1" textAlign="Center" />
										<Text text="{rankingCarrera}" id="text2" textAlign="Center" />
										<Text text="{PromedioPonderado}" id="text3" textAlign="Center" />
										<Text text="{Estado}" id="text4" textAlign="Center" />
									</cells>
								</ColumnListItem>
							</items>
							<columns>
								<Column id="column0">
									<header>
										<Label text="{i18n>semInc}" id="label0" textAlign="Center" />
									</header>
								</Column>
								<Column id="column1">
									<header>
										<Label text="{i18n>posCarr}" id="label1" textAlign="Center" />
									</header>
								</Column>
								<Column id="column2">
									<header>
										<Label text="{i18n>rankcarr}" id="label2" textAlign="Center" />
									</header>
								</Column>
								<Column id="column3">
									<header>
										<Label text="{i18n>promPondCarr}" id="label3" textAlign="Center" />
									</header>
								</Column>
								<Column id="column4">
									<header>
										<Label text="{i18n>estCarr}" id="label4" textAlign="Center" />
									</header>
								</Column>
							</columns>
						</Table>
					</Panel>
					<Panel>
						<headerToolbar>
							<OverflowToolbar>
								<Title text="{i18n>notiGralPre}" />
							</OverflowToolbar>
						</headerToolbar>
						<List backgroundDesign="Transparent" items="{lista>/}">
							<CustomListItem type="Inactive" class="sapUiTinyMargin listNoBorder">
								<content>
									<Link text="Noticia de Pregrado" target="_blank" href="https://www.google.com"/>
								</content>
							</CustomListItem>
						</List>
					</Panel>
					<Panel>
						<headerToolbar>
							<OverflowToolbar>
								<Title text="{i18n>notiGralPos}" />
							</OverflowToolbar>
						</headerToolbar>
						<Link text="Noticia de ProstGrado" target="_blank" href="https://www.google.com" />
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>